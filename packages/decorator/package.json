{
  "name": "@ts-junit/decorator",
  "version": "1.0.0",
  "description": "use junit decorator with typescript",
  "keywords": [
    "uvu",
    "jest",
    "test",
    "tdd",
    "junit",
    "ts",
    "node",
    "cli",
    "ava",
    "mocha",
    "tape",
    "qunit"
  ],
  "bin": {
    "junit": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "tsc --watch",
    "build": "tsc",
    "clean": "rimraf dist",
    "release": "npm test && npm run build && np",
    "types:check": "tsc --noEmit",
    "api:check": "rimraf temp && tsc --project tsconfig.check.json && api-extractor run"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@ts-junit/utils": "workspace:*"
  },
  "devDependencies": {
    "@ts-junit/core": "workspace:*",
    "@microsoft/api-extractor": "^7.32.0",
    "@types/node": "^18.7.18",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3"
  },
  "homepage": "https://github.com/i5ting/ts-junit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i5ting/ts-junit.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/i5ting/ts-junit/issues"
  },
  "author": "i5ting",
  "license": "MIT"
}
