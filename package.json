{
  "name": "ts-junit",
  "private": true,
  "version": "1.0.18",
  "description": "use junit decorator with typescript",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "start": "pnpm build && ts-node ./samples/run.ts",
    "watch": "pnpm -r run watch",
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "format": "prettier --cache --loglevel=warn --write \"**/*.{ts,js,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,md}\"",
    "lint": "eslint --fix \"**/*.ts\"",
    "lint:check": "eslint \"**/*.ts\"",
    "cspell": "cspell lint \"**/*.{ts,js,md,json}\""
  },
  "dependencies": {
    "@ts-junit/core": "workspace:*",
    "@ts-junit/decorators": "workspace:*",
    "uvu": "^0.5.6"
  },
  "devDependencies": {
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "cspell": "^6.12.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "author": "i5ting",
  "license": "MIT"
}
